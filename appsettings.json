{
  "MongoDbSettings": {
    "ConnectionString": "${MONGO_URI}",
    "DatabaseName": "{DB_NAME}"
  },
  "SmtpSettings": {
    "Host": "${SMTP_HOST}",
    "Port": "${SMTP_PORT}",
    "Username": "${SMTP_USERNAME}",
    "Password": "${SMTP_PASSWORD}",
    "EnableSsl": true,
    "Domain": "${SMTP_DOMAIN}"
  },
  "JwtSettings": {
    "Secret": "{JWT_SECRET}",
    "Issuer": "{JWT_ISSUER}",
    "Audience": "{JWT_AUDIENCE}",
    "TokenExpiryInMinutes": "{JWT_TOKEN_EXPIRY}",
    "RefreshTokenExpiryInDays": "{JWT_REFRESH_TOKEN_EXPIRY}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
